<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DartsApp.Controls.CaptionedBorder"
             x:Name="this">

    <Grid RowDefinitions="*,*"
          HeightRequest="150">

        <Label Text="{Binding Caption, Source={x:Reference this}}"
               TextColor="{x:StaticResource Whiteish}"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="15"
               FontSize="16"
               FontAttributes="Bold" />

        <Border Grid.Row="1"
               HorizontalOptions="Start"
               VerticalOptions="End"
               Background="{StaticResource Gray600}"
               Opacity="0.5"
               Margin="10,20"
               Stroke="White"
               HeightRequest="60"
               WidthRequest="100">

            <Label Text="{Binding Value, Source={x:Reference this}}"
                   TextColor="{x:StaticResource Whiteish}"
                   FontSize="16"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontFamily="OpenSans-Semibold" />

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15" />
            </Border.StrokeShape>
        </Border>
    </Grid>
</ContentView>
